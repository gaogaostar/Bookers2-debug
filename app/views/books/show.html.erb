<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(50,50) %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <!--いいねボタン-->
            <% if @book.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  <i class="fas fa-heart unfavo-btn" style="color:red"></i><%= @book.favorites.count %>
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  <i class="fas fa-heart favo-btn"></i><%= @book.favorites.count %>
                <% end %>
              </p>
            <% end %>
          </td>
          <!--コメント-->
          <td>コメント数:<%= @book.book_comments.count %></td>

          <!--編集・削除ボタン-->
          <% if @book.user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <!--コメント-->
      <div>
        <% @book.book_comments.each do |book_comment| %>
          <div class="d-flex align-items-end">
            <%= image_tag book_comment.user.get_profile_image(70,70) %>
            <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
          <p>
            <%= link_to(book_comment.user) do %>
              <%= book_comment.user.name %>
            <% end %>
          </p>
        <% end %>
      </div>
      <!--コメント投稿フォーム-->
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', class:"form-control", style:"width:100%" %><br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>

  </div>
</div>